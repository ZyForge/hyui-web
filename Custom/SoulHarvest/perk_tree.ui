@BranchTitleStyle = LabelStyle(
  FontSize: 12,
  TextColor: #f6c453,
  RenderUppercase: true,
  HorizontalAlignment: Center,
  VerticalAlignment: Center
);

@NodeNameStyle = LabelStyle(
  FontSize: 10,
  TextColor: #b0b9c7,
  HorizontalAlignment: Center,
  VerticalAlignment: Center,
  Wrap: true
);

@NodeLevelStyle = LabelStyle(
  FontSize: 9,
  TextColor: #7a88a0,
  HorizontalAlignment: Center,
  VerticalAlignment: Center
);

@NodeButtonStyle = TextButtonStyle(
  Default: (Background: #1a1f29),
  Hovered: (Background: #242b38),
  Pressed: (Background: #151a22),
  Disabled: (Background: #0f131a)
);

